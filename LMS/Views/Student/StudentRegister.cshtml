@model LMS.Models.Student

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

	<div class="container-fluid">
		<div class="row">
			<!-- left -->
			<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100" style="background-image: url(assets/images/element/Bia_Sign_in.jpg);background-position:center;background-size:cover">
				<!-- SVG Image -->
				<img src="../assets/images/element/Bia_Sign_in.jpg" class="" alt="">
			</div>

			<!-- Right -->
			<div class="col-12 col-lg-6 m-auto">
				<div class="row">
					<div class="col-sm-10 col-xl-8 m-auto">
						<!-- Title -->
						<span class="d-flex justify-content-center align-items-center">
							<img class="col-6" src="../assets/images/FPTEdu.png" alt="">
						</span>
						<h2 class="fs-3 mt-1">Sign up for your account!</h2>
						<p class="lead mb-4">Nice to see you! Please Sign up with your account.</p>

						<!-- Form START -->
						<form asp-action="StudentRegister" method="post">
							<!-- Email -->
							<div class="mb-4">
								<label asp-for="Email" class="form-label">Email address *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Email" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Email" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Password -->
							<div class="mb-4">
								<label asp-for="Password" for="inputPassword5" class="form-label">Password *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Password" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Password" type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword5">
								</div>
							</div>
							<div class="mb-4">
								<label asp-for="Password" for="inputPassword5" class="form-label">Confirm Password *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Password" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Password" type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword5">
								</div>
							</div>
							<!-- Role -->
							<div class="form-group">
								<label asp-for="Role" class="control-label"></label>
								<select asp-for="Role" class="form-control">
									<option value="Student">Student</option>
								</select>
								<span asp-validation-for="Role" class="text-danger"></span>
							</div>
							<!-- Check box -->
							<div class="mb-4">
								<div class="form-check">
									<input type="checkbox" class="form-check-input" id="checkbox-1">
									<label class="form-check-label" for="checkbox-1">By signing up, you agree to the<a href="#"> terms of service</a></label>
								</div>
							</div>
							<!-- Button -->
							<div class="align-items-center mt-0">
								<div class="d-grid">
									<input type="submit" value="Sign Up" class="btn btn-primary" />
								</div>
							</div>
						</form>
						<!-- Form END -->
						<!-- Sign up link -->
						<div class="mt-4 text-center">
							<span>Already have an account?<a href="@Url.Action("Login", "Home")"> Sign in here</a></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
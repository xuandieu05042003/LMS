@model LMS.Models.Student

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

	<div class="container-fluid">
		<div class="row">
			<!-- left -->
			<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100" style="background-image: url(assets/images/element/Bia_Sign_in.jpg);background-position:center;background-size:cover">
				<!-- SVG Image -->
				<img src="../assets/images/element/Bia_Sign_in.jpg" class="" alt="">
			</div>

			<!-- Right -->
			<div class="col-12 col-lg-6 m-auto">
				<div class="row">
					<div class="col-sm-10 col-xl-8 m-auto">
						<!-- Title -->
						<span class="d-flex justify-content-center align-items-center">
							<img class="col-6" src="../assets/images/FPTEdu.png" alt="">
						</span>
						<h2 class="fs-3 mt-1">Sign up for your account!</h2>
						<p class="lead mb-4">Nice to see you! Please Sign up with your account.</p>

						<!-- Form START -->
						<form asp-action="StudentRegister" method="post">
							<!-- Student Name-->
							<div class="mb-4">
								<label asp-for="StudentName" class="form-label">Student Name *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="StudentName" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="StudentName" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Student Name" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Birthday -->
							<div class="mb-4">
								<label asp-for="Birthday" class="form-label">Birthday *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Birthday" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Birthday" type="date" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Bỉthday" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Address -->
							<div class="mb-4">
								<label asp-for="Address" class="form-label">Address *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Address" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Address" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Address" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Phone -->
							<div class="mb-4">
								<label asp-for="Phone" class="form-label">Phone *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Phone" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Phone" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Phone" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Email -->
							<div class="mb-4">
								<label asp-for="Email" class="form-label">Email address *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Email" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Email" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" id="exampleInputEmail1">
								</div>
							</div>
							<!-- Password -->
							<div class="mb-4">
								<label asp-for="Password" for="inputPassword5" class="form-label">Password *</label>
								<div class="input-group input-group-lg">
									<span asp-validation-for="Password" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="Password" type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword5">
								</div>
							</div>
							<!-- Check box -->
							<div class="mb-4">
								<div class="form-check">
									<input type="checkbox" class="form-check-input" id="checkbox-1">
									<label class="form-check-label" for="checkbox-1">By signing up, you agree to the<a href="#"> terms of service</a></label>
								</div>
							</div>
							<!-- Button -->
							<div class="align-items-center mt-0">
								<div class="d-grid">
									<input type="submit" value="Sign Up" class="btn btn-primary" />
								</div>
							</div>
						</form>
						<!-- Form END -->
						<!-- Social buttons -->
						<div class="row">
							<!-- Divider with text -->
							<div class="position-relative my-4">
								<hr>
								<p class="small position-absolute top-50 start-50 translate-middle bg-body px-5">Or</p>
							</div>
							<!-- Social btn -->
							<div class="col-xxl-6 d-grid">
								<a href="#" class="btn bg-google mb-2 mb-xxl-0"><i class="fab fa-fw fa-google text-white me-2"></i>Signup with Google</a>
							</div>
							<!-- Social btn -->
							<div class="col-xxl-6 d-grid">
								<a href="#" class="btn bg-facebook mb-0"><i class="fab fa-fw fa-facebook-f me-2"></i>Signup with Facebook</a>
							</div>
						</div>

						<!-- Sign up link -->
						<div class="mt-4 text-center">
							<span>Already have an account?<a href="@Url.Action("Login", "Student")"> Sign in here</a></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
@model LMS.Models.Student

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

    <div class="container-fluid">
        <div class="row">
            <!-- left -->
            <div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100" style="background-image: url(../assets/images/element/Bia_Sign_in.jpg);background-position:center;background-size:cover">
                <!-- SVG Image -->
                <!-- <img src="../assets/images/element/Bia_Sign_in.jpg" class="" alt=""> -->
            </div>


            <!-- Right -->
            <div class="col-12 col-lg-6 m-auto">
                <div class="row">
                    <div class="col-sm-10 col-xl-8 m-auto">
                        <!-- Title -->
                        <span class="d-flex justify-content-center align-items-center">
                            <img class="col-6" src="../assets/images/FPTEdu.png" alt="">
                        </span>

                        <h2 class="fs-3 mt-1">Login into FPT Training System!</h2>
                        <p class="lead mb-4">
                            Nice to see you! Please
                            log in with your account.
                        </p>

                        <!-- Form START -->
                        <form asp-action="StudentLogin" method="post">
                            <!-- Email -->
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">Email address *</label>
                                <div class="input-group input-group-lg">
                                    <span asp-validation-for="Email" class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
                                    <input asp-for="Email" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" id="exampleInputEmail1">
                                </div>
                            </div>
                            <!-- Password -->
                            <div class="mb-4">
                                <label asp-for="Password" for="inputPassword5"
                                       class="form-label">
                                    Password
                                    *
                                </label>
                                <div class="input-group input-group-lg">
                                    <span asp-validation-for="Password" class="input-group-text bg-light rounded-start border-0 text-secondary px-3">
                                    </span>
                                    <input asp-for="Password" type="password"
                                           class="form-control border-0 bg-light rounded-end ps-1"
                                           placeholder="password"
                                           id="inputPassword5">
                                </div>
                                <div id="passwordHelpBlock"
                                     class="form-text">
                                    Your password must be 8
                                    characters at least
                                </div>
                            </div>
                            <!-- Button -->
                            <div class="align-items-center mt-0">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary" a href="@Url.Action("Index", "Home")">Login</button>
                                </div>
                            </div>
                        </form>
                        <!-- Form END -->
                    </div>

                    <!-- Sign up link -->
                    <div class="mt-4 text-center">
                        <span>
                            Don't have an account? <a href="@Url.Action("StudentRegister", "Student")">Sign up here</a>
                        </span>
                    </div>
                </div>
            </div> <!-- Row END -->
        </div>
    </div>
    <!-- Row END -->
    </div>
</section>
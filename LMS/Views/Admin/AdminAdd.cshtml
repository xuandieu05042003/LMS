@model LMS.Models.Admin
@{
    ViewData["Title"] = "AdminAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

	<!-- Page main content START -->
<div class="page-content-wrapper border">
	<form asp-action="AdminAdd" method="post">
		<!-- Title -->
		<div class="row">
			<div class="col-12 mb-3">
				<h1 class="h3 mb-2 mb-sm-0">Add new Admin</h1>
			</div>
		</div>

		<form class="row g-3" asp-action="Create" method="post" enctype="multipart/form-data">
			<div class="col-md-5">
				<label asp-for="Name" for="name" class="form-label">Name</label>
				<input asp-for="Name" type="Name" class="form-control" id="Name">
			</div>
			<div class="col-md-4">
				<label asp-for="Phone" for="Phone" class="form-label">Phone</label>
				<input asp-for="Phone" type="text" class="form-control" id="Phone">
			</div>
			<div class="col-md-3">
				<label asp-for="Email" for="Email" class="form-label">Email</label>
				<input asp-for="Email" type="Email" class="form-control" id="Email">
			</div>
			<div class="col-5">
				<label asp-for="Username" for="Username" class="form-label">Username</label>
				<input asp-for="Username" type="text" class="form-control" id="Username">
			</div>
			<div class="col-7">
				<label asp-for="Password" for="Password" class="form-label">Password</label>
				<input asp-for="Password" type="text" class="form-control" id="Password">
			</div>
			<div class="col-7">
				<label asp-for="Image" class="form-label"></label>
				<input type="file" asp-for="Image" class="form-control" />
			</div>
			<div class="col-12">
				<button type="submit" class="btn btn-primary">Create</button>
			</div>
		</form>
	</form>
</div>
	<!-- Page main content END -->


@model LMS.Models.Course

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLecture.cshtml";
}
<div class="col-xl-9">
        <div class="row">
            <div class="page-content-wrapper border">
            <h1>Edit Course</h1>
            <hr />
                <form class="row g-3" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-5">
                        <label asp-for="Video" class="control-label"></label>
                        <input asp-for="Video" class="form-control" />
                        <span asp-validation-for="Video" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Instructor" class="control-label"></label>
                        <input asp-for="Instructor" class="form-control" />
                        <span asp-validation-for="Instructor" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Semester" class="control-label"></label>
                        <input asp-for="Semester" class="form-control" />
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="Describe" class="control-label"></label>
                        <input asp-for="Describe" class="form-control" />
                        <span asp-validation-for="Describe" class="text-danger"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="LecturerId" for="LecturerId" class="form-label">LecturerId</label>
                        <input class="form-control" type="text" asp-for="LecturerId" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="MyCourses">Back to List</a>
        </div>
    </div>
</div>
